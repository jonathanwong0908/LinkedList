<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/login.css">
<title>Signup</title>
</head>

<body class="ff-primary">
    <%- include("../includes/navigation.ejs") %>
    <section class="login-section grid">
        <div class="login-form-container grid bg-neutral-100">
            <h2 class="form-title">Sign Up</h2>
            <div class="social-button-container flex">
                <a class="social-button google-button" href="/google"><i
                        class="text-neutral-100 fa-brands fa-google fa-2xl"></i></a>
                <a class="social-button bg-neutral-900" href="/"><i
                        class="text-neutral-100 fa-brands fa-github fa-2xl"></i></a>
            </div>
            <form class="login-form grid" action="/signup" method="POST">
                <input class="login-form-input bg-primary-300" type="email" placeholder="Email" name="email">
                <input class="login-form-input bg-primary-300" type="password" placeholder="Password" name="password">
                <button class="login-form-button signup-button text-primary-500 bg-neutral-100 fw-bold"
                    type="submit">SIGNUP</button>
            </form>
            <a class="business-button text-neutral-500" href="/business/signup">Business signup</a>
        </div>
    </section>
</body>

</html>