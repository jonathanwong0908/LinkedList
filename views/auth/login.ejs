<%- include("../includes/head.ejs") %>
<link rel="stylesheet" href="/css/login.css">
<title>Login</title>
</head>

<body class="ff-primary">
    <%- include("../includes/navigation.ejs") %>
    <section class="login-section grid bg-primary-300">
        <div class="login-container grid bg-neutral-100">
            <h2 class="login-title text-neutral-500 fw-semi-bold fs-700">Login to your account</h2>
            <div class="auth-buttons flex">
                <a class="auth-button google-button" href="/auth/google"><i
                        class="text-neutral-100 fa-brands fa-google fa-2xl"></i></a>
                <a class="auth-button bg-neutral-900" href="/"><i
                        class="text-neutral-100 fa-brands fa-github fa-2xl"></i></a>
            </div>
            <form class="login-form grid" action="/auth/login" method="POST">
                <input class="bg-primary-300" type="email" placeholder="Email" name="email">
                <input class="bg-primary-300" type="password" placeholder="Password" name="password">
                <button class="login-form-button login-button fw-bold bg-primary-500 text-neutral-100"
                    type="submit">LOGIN</button>
            </form>
            <a class="login-form-button signup-button d-block fw-bold text-primary-500" href="/auth/signup">SIGNUP</a>
            <a class="business-button text-neutral-500">Business</a>
        </div>
    </section>
</body>

</html>